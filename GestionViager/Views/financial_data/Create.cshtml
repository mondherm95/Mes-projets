                             url: "/financial_data/updateComi/" +data["id"],
                             contentType: "application/json; charset=utf-8",
                             dataType: "json",
                         });
                         $("#btnValide").hide(0);
                         $("#valide").show();


                     });

                 },
                 error: function (data) {
                     alert($.parseJSON(data));
                     
                 }
